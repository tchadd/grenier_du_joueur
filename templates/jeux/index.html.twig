{% extends 'base.html.twig' %}

{% block title %}Jeux{% endblock %}
{% block stylesheets %}
<link rel='stylesheet' href="assets/css/jeux.css">
{% endblock %}



{% block content %}
    <section class="jeux">
    {% if is_granted('ROLE_ADMIN') %}
    <div class="jeu">
            <div class="btn-ajouter"> 
                <a href="{{ path('app_jeux_ajouter')}}" class="item btn">Ajouter</a>
            </div>
            </div>
{% endif %}
        {% for jeu in jeux %}
        <div class="jeu">
            <h2 align="center">{{ jeu.nom}}</h2>
             <img src="{{ asset('assets/image/' ~ jeu.image) }}" alt="jeu" width="300px">
            <div align="center"> 
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_jeux_modifier', {id:jeu.id}) }}" class="item btn">Modifier</a>
                <a href="{{ path('app_jeux_supprimer', {id:jeu.id}) }}" class="item btn">Supprimer</a>
            {% endif %}
            </div>
